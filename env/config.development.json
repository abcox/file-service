{
  "server": {
    "port": 3000,
    "host": "localhost"
  },
  "storage": {
    "type": "azure",
    "local": {
      "uploadDir": "uploads"
    },
    "azure": {
      "connectionString": "UseDevelopmentStorage=true",
      "container": "uploads"
    },
    "options": {
      "safeMode": false
    }
  },
  "logging": {
    "level": "debug",
    "enableConsole": true
  }
} 