{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": "smoke.e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "isolatedModules": true
      }
    ]
  },
  "testTimeout": 10000,
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}
